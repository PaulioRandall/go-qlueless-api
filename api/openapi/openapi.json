{
	"openapi": "3.0.2",
	"info": {
		"title": "Qlueless Assembly Line API",
		"version": "0.0.1"
	},
	"paths": {
		"/dictionaries": {
		  "get": {
		    "description": "Returns all service dictionaires.",
		    "responses": {
		      "default": {
		        "description": "Mapped list of dictionaries.",
		        "content": {
		          "application/json": {
		            "schema": {
		              "oneOf": [
		                {
		                  "$ref": "#/components/schemas/dictionaries_wrapped"
		                },
		                {
		                  "$ref": "#/components/schemas/dictionaries_object"
		                }
		              ]
		            }
		          }
		        }
		      }
		    }
		  }
		},
		"/orders": {
		  "get": {
		    "description": "Returns all orders.",
		    "responses": {
		      "default": {
		        "description": "List of orders.",
		        "content": {
		          "application/json": {
		            "schema": {
		              "oneOf": [
		                {
		                  "$ref": "#/components/schemas/orders_wrapped"
		                },
		                {
		                  "$ref": "#/components/schemas/orders_array"
		                }
		              ]
		            }
		          }
		        }
		      }
		    }
		  }
		},
		"/orders/{order_id}": {
		  "get": {
		    "description": "Returns all orders.",
		    "parameters": [
		      {
		        "$ref": "#/components/parameters/order_id"
		      }
		    ],
		    "responses": {
		      "default": {
		        "description": "List of orders.",
		        "content": {
		          "application/json": {
		            "schema": {
		              "oneOf": [
		                {
		                  "$ref": "#/components/schemas/order_wrapped"
		                },
		                {
		                  "$ref": "#/components/schemas/order_entry"
		                }
		              ]
		            }
		          }
		        }
		      }
		    }
		  }
		},
		"/batches": {
		  "get": {
		    "description": "Returns all batches.",
		    "responses": {
		      "default": {
		        "description": "List of batches.",
		        "content": {
		          "application/json": {
		            "schema": {
		              "oneOf": [
		                {
		                  "$ref": "#/components/schemas/batches_wrapped"
		                },
		                {
		                  "$ref": "#/components/schemas/batches_array"
		                }
		              ]
		            }
		          }
		        }
		      }
		    }
		  }
		}
  },
